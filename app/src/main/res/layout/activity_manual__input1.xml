<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage_gradientbackground"
    tools:context=".Manual_Input1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="228dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ask-location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:text="Insert your location:"
            android:textColor="#FFFFFF"
            android:textSize="21dp" />

        <EditText
            android:id="@+id/state_input"
            android:layout_width="251dp"
            android:layout_height="64dp"
            android:ems="10"
            android:hint="State (IL)"
            android:inputType="textPersonName"
            android:textColorHint="#FFFFFF" />

        <EditText
            android:id="@+id/city_input"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:ems="10"
            android:hint="City (Chicago)"
            android:inputType="textPersonName"
            android:textColorHint="#FFFFFF" />
    </LinearLayout>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="130dp"
        android:layout_height="77dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="156dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/custom_button"
        android:text="Submit" />

</RelativeLayout>